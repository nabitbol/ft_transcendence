// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// models

model User {
  id         String  @id @default(uuid())
  username   String  @unique
  email      String?  @unique
  password   String
  doubleAuth Boolean
  wins       Int
  losses     Int
  draw       Int
  level      Int
  avatar     String

  @@index([username])
}
